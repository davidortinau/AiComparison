<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AiComparison"
             xmlns:converters="clr-namespace:AiComparison.Converters"
             xmlns:material="clr-namespace:FlagstoneUI.Themes.Material;assembly=FlagstoneUI.Themes.Material"
             x:Class="AiComparison.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <material:Theme />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:ProcessingButtonTextConverter x:Key="ProcessingButtonTextConverter"/>
            <converters:BoolToFontAttributeConverter x:Key="BoolToFontAttributeConverter"/>
            <converters:BoolToButtonStyleConverter x:Key="BoolToButtonStyleConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
